---
// JAVASCRIPT
import logoSVG from '../../public/assets/logo.svg'
---

<!-- HTML -->
<nav>
  <a href="/" class="logo">
    <img src={logoSVG} alt="Logo">
  </a>
  <a href="/">Home</a>
  <a href="/tags/nutty/">Nutty</a>
  <a href="/tags/vegan/">Vegan</a>
  <a href="/about/">About</a>
</nav>

<!-- CSS -->
<style>
  nav {
    display: grid;
    align-items: center;
    grid-template-columns: max-content 1fr repeat(4, minmax(max-content, auto));
    background-color: var(--hot-pink);
    color: var(--champagne);
    padding: 1.8rem 4.2rem;
    grid-gap: 2rem;
    min-height: 5vh;
  }

  .logo img {
    vertical-align: middle;
  }

  a {
    text-decoration: none;
    font-weight: bold;
    color: var(--champagne);
    font-size: 1.8rem;
  }

  a:nth-child(2) {
    grid-column: 3/4;
  }
</style>